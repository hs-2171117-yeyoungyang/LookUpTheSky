<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

<LinearLayout
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#F2F8D4"
    android:orientation="vertical"
    tools:context=".MainActivity">
    <TextView
        android:id="@+id/TxtVw_address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="20dp"
        android:gravity="center"
        android:text="oo시 oo구"
        android:textSize="30dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/border"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/TxtVw_Temp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/unkempt"
                android:text="27º"
                android:textColor="#787777"
                android:textSize="100dp"
                android:textStyle="normal" />
            <TextView
                android:id="@+id/TxtVw_Temp_stat"
                android:text="따뜻함"
                android:textSize="30dp"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/ImgVw_sky"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:src="@drawable/sky_1"/>
            <TextView
                android:id="@+id/TxtVw_sky"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="30dp"
                android:textSize="30dp"
                android:text="맑음"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/border">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="25dp"
            android:layout_marginBottom="20dp"
            android:orientation="vertical">
            <TextView
                android:text="비 올 확률: "
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:textSize="30dp"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/ImgVw_hum"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/humidity1"/>
                <TextView
                    android:text="습도: "
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="30dp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/ImgVw_wind"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/wind_1"/>
            <TextView
                android:text="풍속: "
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="30dp"/>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="25dp"
            android:layout_marginRight="20dp"
            android:orientation="vertical">
            <TextView
                android:id="@+id/TxtVw_rain"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="30%"
                android:layout_marginBottom="10dp"
                android:textSize="30dp"/>
            <TextView
                android:id="@+id/TxtVw_hum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="70%"
                android:layout_marginBottom="10dp"
                android:textSize="30dp"/>
            <TextView
                android:id="@+id/TxtVw_wind"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3m/s"
                android:textSize="30dp"/>
        </LinearLayout>
    </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:orientation="vertical"
            android:background="@drawable/border">
            <TextView
                android:id="@+id/TxtVw_rain_stat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="비가 올 것 같아요.\n우산을 챙기세요."
                android:textSize="15dp"/>
            <ImageView
                android:id="@+id/ImgVw_rain_stat"
                android:layout_gravity="center"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:src="@drawable/rain_1"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/border"
        android:orientation="vertical">
        <TextView
            android:text="기온별 옷차림 추천"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="10dp"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textSize="20dp"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/ImgVw_clothes"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/clothes_1"/>

            <TextView
                android:id="@+id/TxtVw_clothes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="15dp"
                android:text="반팔 • 얇은 여름용 가디건 • 얇은 셔츠 • 반바지 • 통풍성 바지 • 면바지 • 원피스" />
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="50dp"
        android:background="@drawable/border"
        android:orientation="vertical">
        <TextView
            android:text="𓏸𓂂𓂃 MeMo 𓂃 𓂂𓏸"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="15dp"
            android:textSize="20dp"/>
        <EditText
            android:id="@+id/EdtTxt_memo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:inputType="textMultiLine"
            android:minLines="5"
            android:hint="이 곳은 메모를 할 수 있는 공간입니다. 오늘을 기록해보세요."
            android:textSize="15dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:orientation="horizontal">
        <Button
            android:id="@+id/Btn_memo"
            android:layout_width="130dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:backgroundTint="#BBB5B5"
            android:gravity="center"
            android:layout_marginRight="5dp"
            android:text="메모 저장하기"
            android:textSize="15dp" />
        <Button
            android:id="@+id/Btn_ViewMemo"
            android:layout_width="130dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:backgroundTint="#BBB5B5"
            android:gravity="center"
            android:layout_marginLeft="5dp"
            android:text="지난 메모 보기"
            android:textSize="15dp" />
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginRight="50dp"
        android:layout_marginLeft="50dp"
        android:layout_marginBottom="50dp">
        <Button
            android:id="@+id/ViewLicense"
            android:layout_width="110dp"
            android:layout_height="40dp"
            android:layout_gravity="right"
            android:backgroundTint="#BBB5B5"
            android:text="라이선스 보기"/>
        <TextView
            android:id="@+id/TxtLicense"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:text=" "/>
    </LinearLayout>
</LinearLayout>
</ScrollView>